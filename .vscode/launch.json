  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch App Program",
      "program": "${workspaceFolder}/packages/app/scripts/start.js",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node",
      "env": {
        "LOCAL_SERVER": "1",
        "NODE_OPTIONS": "--max-old-space-size=4096"
      },
      "cwd": "${workspaceFolder}/packages/app/"
    }
  ]
}
